<HomeScreen>:
    canvas.before:
        Color:
            rgba: 100/255, 100/255, 154/255, 0.86
        Rectangle:
            size: self.size
            pos: self.pos
        
    BoxLayout:
        orientation: "vertical"
        spacing: dp(10)
        padding: dp(10)
        

        # Top section: Function buttons
        GridLayout:
            cols: 10
            size_hint_y: 0.15
            spacing: dp(5)
            
            

            Button:
                text: "Accounts"
                font_size: "13sp"
                on_press: root.accounts_button()
                background_color: 0.5, 0.5, 0.6, 0
                canvas.before:
                    Color: 
                        rgba: 0.5, 0.5, 0.6, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    Color: 
                        rgba: 18/255, 44/255, 70/255, 0.94
                    Line:
                        width: 2.35
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
                            
                

            Button:
                text: "Pay &\nTransfer"
                font_size: "13sp"
                on_press: root.pay_button()
                background_color: 0.5, 0.5, 0.6, 0
                canvas.before:
                    Color: 
                        rgba: 0.5, 0.5, 0.6, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    Color: 
                        rgba: 18/255, 44/255, 70/255, 0.94
                    Line:
                        width: 2.35
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

            Button:
                text: "Deposit\nChecks"
                font_size: "13sp"
                on_press: root.checks_button()
                background_color: 0.5, 0.5, 0.6, 0
                canvas.before:
                    Color: 
                        rgba: 0.5, 0.5, 0.6, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    Color: 
                        rgba: 18/255, 44/255, 70/255, 0.94
                    Line:
                        width: 2.35
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

            Button:
                text: "Investments"
                font_size: "13sp"
                on_press: root.investments_button()
                background_color: 0.5, 0.5, 0.6, 0
                canvas.before:
                    Color: 
                        rgba: 0.5, 0.5, 0.6, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    Color: 
                        rgba: 18/255, 44/255, 70/255, 0.94
                    Line:
                        width: 2.35
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

            Button:
                text: "View\nFICO\nScore"
                font_size: "13sp"
                on_press: root.fico_button()
                background_color: 0.5, 0.5, 0.6, 0
                canvas.before:
                    Color: 
                        rgba: 0.5, 0.5, 0.6, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    Color: 
                        rgba: 18/255, 44/255, 70/255, 0.94
                    Line:
                        width: 2.35
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

            Button:
                text: "Rewards"
                font_size: "13sp"
                on_press: root.rewards_button()
                background_color: 0.5, 0.5, 0.6, 0
